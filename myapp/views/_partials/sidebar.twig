<div id="sidebar">
    <!-- Search -->
    <div class="box search">
        <h2>Поиск по <span></span></h2>
        <div class="box-content">
            <form action="/" method="POST" @submit.prevent="searchRestaurants">
                <label>Название ресторана</label>
                <input type="text" class="searchRestTxt" id="searchRestTxt" v-model="restaurantFilters.search"/>

                <div class="inline-field">
                    <label>Цена</label>
                    <select class="field small-field" v-model="restaurantFilters.price_from">
                        <option value=""></option>
                        <option value="0">0</option>
                        <option value="5">5</option>
                        <option value="10">10</option>
                        <option value="15">15</option>
                        <option value="20">20</option>
                        <option value="30">30</option>
                    </select>

                    <label>до:</label>

                    <select class="field small-field" v-model="restaurantFilters.price_to">
                        <option value=""></option>
                        <option value="5">5</option>
                        <option value="10">10</option>
                        <option value="15">15</option>
                        <option value="20">20</option>
                        <option value="30">30</option>
                    </select>
                </div>

                <input type="submit" class="search-submit" value="Поиск"/>
            </form>
        </div>
    </div>
    <!-- End Search -->

    <!-- Categories -->
    <div class="box categories">
        <h2>Категории <span></span></h2>
        <div class="box-content">
            <ul id="categories">
                <li>
                    <a href="javascript:;" @click="filterRestaurants('category_id', null)">Все</a>
                </li>

                <li v-for="(category, index) in $root.categories" :class="{last: index === categories.length - 1}"
                    v-cloak>
                    <a href="javascript:;" v-text="category.title"
                       @click="filterRestaurants('category_id', category.id)"></a>
                </li>
            </ul>
        </div>
    </div>
    <!-- End Categories -->
</div>