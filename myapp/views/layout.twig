<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="ru">
<head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title>foodpanda</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="shortcut icon" href="/images/logo2.png" type="image/png">
    <link rel="stylesheet" href="/css/style.css" type="text/css" media="all" />
    <!--[if lte IE 6]>
        <link rel="stylesheet" href="/css/ie6.css" type="text/css" media="all" />
    <![endif]-->
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <div id="app">
        <div class="shell">
            <!-- Header -->
            {% include "_partials/header.twig" %}
            <!-- End Header -->

            <!-- Main -->
            <div id="main">
                <div class="cl">&nbsp;</div>
                {% block content %}{% endblock %}
                <div class="cl">&nbsp;</div>
            </div>
            <!-- End Main -->

            <!-- Footer -->
            {% include "_partials/footer.twig" %}
            <!-- End Footer -->
        </div>
        <!-- End Shell -->
    </div>

    <!-- JS -->
    <script type="text/javascript">
        var foodPanda = {}
    </script>

    <script type="text/javascript" src="/js/vue.js"></script>
    <script type="text/javascript" src="/js/axios.min.js"></script>
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript" src="/js/jquery.jcarousel.js"></script>
    <script type="text/javascript" src="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/es6-promise@4/dist/es6-promise.auto.js"></script>

    {% if page == "home" %}
        <script type="text/javascript">
            foodPanda.isHomepage = true
        </script>
    {% endif %}

    <script type="text/javascript" src="/js/slider.js"></script>
    <script type="text/javascript" src="/js/order-form.js"></script>
    <script type="text/javascript" src="/js/app.js"></script>
    {% block scripts %}{% endblock %}
    <!-- End JS -->
</body>
</html>
